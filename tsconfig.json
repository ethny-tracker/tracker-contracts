{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "build/types"
    ],
    "types": [
      "node",
      "truffle-typings",
      "mocha",
      "chai"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}